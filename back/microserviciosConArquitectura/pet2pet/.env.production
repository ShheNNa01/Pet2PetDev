# .env.production
# NO subir este archivo con valores reales al repositorio
APP_NAME=Pet2Pet
DEBUG=False
VERSION=1.0.0
API_PREFIX=/api/v1
ENVIRONMENT=production

# Database
DB_HOST=postgres  # Cambiar según tu host de producción
DB_PORT=5432
DB_NAME=pet2pet
DB_USER=postgres  # Cambiar a un usuario específico
DB_PASSWORD=123456  # Usar contraseña segura
DATABASE_URL=postgresql://postgres:123456@localhost:5432/pet2pet

# Security
SECRET_KEY=your_secure_production_key  # Cambiar a una clave segura
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]  # Actualizar con dominio real

# Service Discovery
SERVICE_DISCOVERY_HOST=consul  # Si usas consul en producción
SERVICE_DISCOVERY_PORT=8500

# Puertos de servicios
AUTH_SERVICE_PORT=8000
POSTS_SERVICE_PORT=8001
MESSAGES_SERVICE_PORT=8002
NOTIFICATIONS_SERVICE_PORT=8003
PETS_SERVICE_PORT=8004
GROUPS_SERVICE_PORT=8005
SEARCH_SERVICE_PORT=8006
FEED_SERVICE_PORT=8007
MODERATION_SERVICE_PORT=8008
VIRTUAL_PETS_SERVICE_PORT=8009

# Configuración de archivos
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=["image/jpeg","image/png","image/jpg"]
UPLOAD_FOLDER=/var/www/uploads  # Actualizar para producción
MEDIA_ROOT=/var/www/media  # Nuevo: directorio para archivos multimedia
STATIC_ROOT=/var/www/static  # Nuevo: directorio para archivos estáticos

# Configuración de paginación
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Redis y Cache
REDIS_ENABLED=true  # Activar en producción
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password  # Añadir contraseña en producción
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0
REDIS_MAX_CONNECTIONS=10
REDIS_TIMEOUT=30
CACHE_ENABLED=true  # Activar en producción
CACHE_TTL=3600

# Notifications
NOTIFICATION_WORKER_ENABLED=true  # Activar en producción
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_PROCESSING_INTERVAL=0.1

# Logging
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=/var/log/pet2pet/app.log  # Actualizar ruta para producción

# Rate Limiting
ENABLE_RATE_LIMIT=true  # Activar en producción
RATE_LIMIT_PER_MINUTE=100

# Storage
STORAGE_TYPE=s3  # Cambiar a s3 si usarás AWS S3
S3_BUCKET_NAME=your-bucket-name
S3_ACCESS_KEY=your_aws_access_key
S3_SECRET_KEY=your_aws_secret_key
S3_REGION=your-aws-region

# Email (Nuevo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Monitoring (Nuevo)
ENABLE_PROMETHEUS=true
PROMETHEUS_MULTIPROC_DIR=/tmp
GRAFANA_HOST=grafana:3000

# SSL/TLS (Nuevo)
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Backup (Nuevo)
BACKUP_ENABLED=true
BACKUP_PATH=/var/backups/pet2pet
BACKUP_RETENTION_DAYS=30

# Performance (Nuevo)
WORKERS_PER_CORE=2
MAX_WORKERS=4
KEEPALIVE=60
