# .env.development
# Configuración básica
APP_NAME=Pet2Pet
DEBUG=True
VERSION=1.0.0
API_PREFIX=/api/v1
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:123456@localhost:5432/pet2pet

# Security
SECRET_KEY=Pet2pet2024*
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Service Discovery
SERVICE_DISCOVERY_HOST=localhost
SERVICE_DISCOVERY_PORT=8500

# Puertos de servicios
AUTH_SERVICE_PORT=8000
POSTS_SERVICE_PORT=8001
MESSAGES_SERVICE_PORT=8002
NOTIFICATIONS_SERVICE_PORT=8003
PETS_SERVICE_PORT=8004
GROUPS_SERVICE_PORT=8005
SEARCH_SERVICE_PORT=8006
FEED_SERVICE_PORT=8007
MODERATION_SERVICE_PORT=8008
VIRTUAL_PETS_SERVICE_PORT=8009

# Configuración de archivos
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=["image/jpeg","image/png","image/jpg"]
UPLOAD_FOLDER=uploads

# Configuración de paginación
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Redis y Cache (desactivado en desarrollo)
REDIS_ENABLED=false
REDIS_URL=
REDIS_MAX_CONNECTIONS=10
REDIS_TIMEOUT=30
CACHE_ENABLED=false
CACHE_TTL=3600

# Notifications
NOTIFICATION_WORKER_ENABLED=false
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_PROCESSING_INTERVAL=0.1

# Logging
LOG_LEVEL=DEBUG
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=logs/pet2pet.log

# Rate Limiting
ENABLE_RATE_LIMIT=false
RATE_LIMIT_PER_MINUTE=100

# Storage
STORAGE_TYPE=local
S3_BUCKET_NAME=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=